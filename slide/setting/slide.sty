% デザイン
\usetheme{metropolis}
\useoutertheme{metropolis}
\useinnertheme{metropolis}
\usefonttheme{metropolis}

% 色定義
\definecolor{mBlue}{RGB}{24, 115, 240}
\definecolor{mGreen}{RGB}{68, 165, 72}
\definecolor{mGray}{RGB}{214, 214, 214}

% オリヂナル設定
% \usecolortheme{rose}                                                % 全体のスタイルカラー
\newcommand{\ThemeColor}{mGreen}                                    % テーマカラー（ここだけ変えればok）
\setbeamercolor{normal text}{fg=black}                              % 本文の文字色
\setbeamercolor{structure}{fg=\ThemeColor}                          % \structure{}で囲った文字などの文字色
\setbeamercolor{alerted text}{fg=red}                               % \alert{}で囲った文字などの文字色
\setbeamercolor{example text}{fg=mGreen}

\setbeamercolor{title}{fg=black, bg=white}                          % 表紙のタイトル色
\setbeamercolor{author}{fg=\ThemeColor, bg=white}                   % 表紙の著者色
\setbeamercolor{frametitle}{fg=white, bg=\ThemeColor}               % 各スライドのタイトル色
\setbeamerfont{frametitle}{size=\large, series=\bf}                 % 各スライドのタイトルフォント
\setbeamercolor{sectiontitle}{fg=black}                             % セクションページのタイトル色

% metropolisテーマ専用設定
\metroset{progressbar=frametitle}
% \metroset{block=fill}                                               % blockの背景fill, transparent
\setbeamercolor{progress bar}{fg=lightgray, bg=mGray}               % 各スライド上部ののprogress barの色
\setbeamercolor{progress bar in section page}{use=progress bar}     % セクションページのprogress barの色
\setlength{\metropolis@titleseparator@linewidth}{2.0pt}             % 表紙のprogress barの太さ
\setlength{\metropolis@progressinheadfoot@linewidth}{2.0pt}         % 各スライド上部のprogress barの太さ
\setlength{\metropolis@progressonsectionpage@linewidth}{2.0pt}      % セクションページのprogress barの太さ

