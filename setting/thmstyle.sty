\usepackage{amsthm}
\usepackage{mdframed}

% [定理 1]的スタイルbracketstyleの定義
\newtheoremstyle{mythmstyle}   % name
{}                              % space above
{}                              % space below
{\normalfont}                   % body font
{}                              % indent amount
{\bfseries}                     % theorem head font
{}                              % punctuation after theorem head
{5pt}                           % space after theorem head (default: 5pt)
{\underline{{\bf\thmname{#1} \thmnumber{#2}}} \thmnote{\hspace{2pt} #3 \newline}}% theorem head spec

% proof環境の再定義
\makeatletter
\renewenvironment{proof}[1][\proofname]{\par
\pushQED{\qed}%
\normalfont \topsep6\p@\@plus6\p@\relax
\trivlist
\item\relax
{\itshape
#1\@addpunct{.}}\hspace\labelsep\ignorespaces
}{%
\popQED\endtrivlist\@endpefalse
}
\makeatother

% =========================================================
\theoremstyle{mythmstyle}

\newtheorem{theo}{定理}[section]
\newtheorem*{theorem*}{定理} 
\newenvironment{theorem}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{theo}}{\end{theo}\end{mdframed}}
\newtheorem{defi}{定義}[section]
\newtheorem*{definition*}{定義}
\newenvironment{definition}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{defi}}{\end{defi}\end{mdframed}}
\newtheorem{prop}[theo]{命題}
\newtheorem*{proposition*}{命題} 
\newenvironment{proposition}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{prop}}{\end{prop}\end{mdframed}}
\newtheorem{coro}[theo]{系}
\newtheorem*{corollary*}{系} 
\newenvironment{corollary}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{coro}}{\end{coro}\end{mdframed}}
\newtheorem{lemm}{補題}
\newtheorem*{lemmma*}{補題} 
\newenvironment{lemma}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{lemm}}{\end{lemm}\end{mdframed}}
\newtheorem{exam}[theo]{例}
\newtheorem*{example*}{例}
\newenvironment{example}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{exam}}{\end{exam}\end{mdframed}}
\newtheorem{exer}[theo]{演習}
\newtheorem*{exercise*}{演習}
\newenvironment{exercise}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{exer}}{\end{exer}\end{mdframed}}
\newtheorem{rema}{補足}[section]
\newtheorem*{remark*}{コメント}
\newenvironment{remma}{\begin{mdframed}[backgroundcolor=lightgray!30, linewidth=0pt]\begin{rema}}{\end{rema}\end{mdframed}}
\newtheorem{none}{コメント}
\newtheorem*{none*}{コメント}






