\newcommand{\bmX}{ \bm{X} }
\newcommand{\hbmx}{ \widehat{\bm{x}} }
\newcommand{\hbmX}{ \widehat{\bm{X}} }
\newcommand{\mcx}{ \mathcal{x} }
\newcommand{\mcX}{ \mathcal{X} }
\newcommand{\hmcx}{ \widehat{\mathcal{x}} } 
\newcommand{\hmcX}{ \widehat{\mathcal{X}} } 

% commma + space
\newcommand*\mathwords{\textnormal}

% override tilde & hat
\renewcommand{\tilde}[1]{ \widetilde{#1} }
